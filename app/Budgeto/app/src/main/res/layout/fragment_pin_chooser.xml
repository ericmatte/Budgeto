<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.endless.budgeto.SetupActivity$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imgLock"
            android:src="@drawable/ic_verified_user_black_24dp"
            android:forceHasOverlappingRendering="false"
            android:tint="#0f605a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choisissez un mot de passe numÃ©rique pour l&apos;application"
            android:id="@+id/strPIN"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:id="@+id/txtPIN"
            android:layout_margin="8dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Retapez le mot de passe"
            android:layout_gravity="center_horizontal"
            android:id="@+id/strPINCheck"
            android:layout_marginTop="@dimen/fab_margin" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:id="@+id/txtPINCheck"
            android:layout_margin="8dp"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin test"
            android:id="@+id/btnPinCheck"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
