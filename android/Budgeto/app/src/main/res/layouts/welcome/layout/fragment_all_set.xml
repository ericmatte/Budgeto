<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.endless.budgeto.com.endless.welcome.SetupActivity$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layAllSet"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_done"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Configuration terminé!"
                android:layout_marginTop="@dimen/fab_margin"
                android:gravity="center_horizontal"
                android:id="@+id/textView8" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Récapitulatif"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center_horizontal"
            android:id="@+id/txtRecap" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Numéro d'identification personnel"
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/txtPIN"
            android:drawableStart="@drawable/ic_cross"
            android:drawablePadding="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Banques configurées :"
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/txtBanks"
            android:drawableStart="@drawable/ic_piggy_bank"
            android:drawablePadding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aucune banques configurées."
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/txtNoBanks"
            android:drawableStart="@drawable/ic_cross"
            android:drawablePadding="5dp"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layBanks"></LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinish"
            android:text="Utiliser Budgeto"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimary"
            android:padding="20dp"
            android:textSize="@dimen/fab_margin"
            android:layout_marginTop="34dp" />
    </LinearLayout>

</RelativeLayout>
